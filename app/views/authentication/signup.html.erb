
<h1>Register now with your email!</h1>

<% if flash[:notice] %>
  <p style="color: red;"><%= flash[:notice] %></p>
<% end %>

<%= form_tag('signup') do %>
  <div class="input-append">
      <p><%= text_field_tag :name, params[:name], class: "span2", placeholder: "Name" %></p>
      <p><%= text_field_tag :email, params[:email], class: "span2", placeholder: "Email" %></p>
      <p><%= password_field_tag :password, params[:nil], class: "span2"%></p>
      <button class="btn" type="submit">Signup</button>
  </div>
<% end %>